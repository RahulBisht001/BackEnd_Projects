<div class="form-group">
    <label for="title" class="mt-3">Title</label>
    <input required type="text" value="<%= article.title%>" name="title"
    id="title" class="form-control"
    placeholder="Enter the Title">
</div>

<div class="form-group">
    <label for="description" class="mt-3">Description</label>
    <textarea required name="description" id="description" cols="30" rows="5"
        class="form-control"
        placeholder="Enter the Description"><%= article.description%></textarea>
    </div>

    <div class="form-group">
        <label for="markdown" class="mt-3">Mark Down</label>
        <textarea required name="markdown" id="markdown" cols="30" rows="5"
            class="form-control"
            placeholder="Enter the markdown"><%= article.markdown%></textarea>
        </div>


        <a href="/" class="btn btn-secondary px-4 mt-3 mb-2">Cancel</a>
        <button type="submit" class="btn btn-primary px-4 mt-3 mb-2">Save</button>